= render_attrs(entry, *entry.used_attributes(:vereinssitz, :founding_year))
= render_attrs(entry, *entry.used_attributes(:buv_lohnsumme, :nbuv_lohnsumme)) if can?(:show_uv_lohnsummen, @group)
- if entry.uses_manually_counted_members?
  = render_attrs(entry, *entry.used_attributes(:manual_member_count))
- else
  = render_attrs(entry, *entry.used_attributes(:recognized_members))

- if entry.is_a?(Group::Root)
  = render_attrs(entry, :hostname)
